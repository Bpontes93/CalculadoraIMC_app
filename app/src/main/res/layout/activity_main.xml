<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/grayesc"
        android:layout_margin="15sp">

        <TextView

            android:id="@+id/textInfo"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="Insira seus dados e aperte calcular" />


        <androidx.cardview.widget.CardView



            android:backgroundTint="@color/grayclear"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23sp"
            >

            <TextView

                android:hint="Descubra seu IMC"
                android:textColorHint="@color/grayesc"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/teal_200"
                android:textSize="35sp"
                android:id="@+id/textResultado"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>

        </androidx.cardview.widget.CardView>




    </androidx.cardview.widget.CardView>


    <EditText


        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="100sp"
        android:layout_gravity="center"
        android:id="@+id/dadoPeso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Digite seu peso:\nex. 70Kg"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="20sp"
        />

    <EditText
        android:layout_marginTop="40sp"
        android:layout_gravity="center"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"

        android:id="@+id/dadoAltura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:hint="Digite sua Altura:\nex. 1.75m"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="20sp"
        />

    <Button
        android:layout_marginTop="40sp"
        android:id="@+id/buttonCalc"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        android:padding="15sp"
        android:text="@string/calcular"
        android:textSize="20sp"
        />





</androidx.appcompat.widget.LinearLayoutCompat>


